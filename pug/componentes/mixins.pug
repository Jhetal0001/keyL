mixin caja(id, imagen, categoria, titulo, contenido, button)
    .caja(id=+id)
        .caja__imagen: img(src="../images/"+imagen)
        .caja__contenido
            span.caja__categoria=categoria
            h3=titulo
            p=contenido
            button=button	
    i.fas.fa-times
            
mixin listado-categoria(numero,titulo)
    li: a(href="#")
        span.sidebar--listado__numero=numero
        span.sidebar--listado__titulo=titulo