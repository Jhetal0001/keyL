mixin caja--con-fondo-grande(clase, imagen, categoria, titulo, contenido)
    a(class="caja--con-fondo caja--grande " + clase)
        .caja__imagen: img(src="../images/"+imagen)
        .caja--con-fondo__contenido
            span.caja--con-fondo__categoria=categoria
            h2=titulo
            p=contenido

mixin caja--con-fondo-mediana (clase, imagen, categoria, titulo, contenido, link)
    a(class="caja--con-fondo caja--mediana " + clase)
        .caja__imagen: img(src="../images/"+imagen)
        .caja--con-fondo__contenido
            span.caja--con-fondo__categoria=categoria
